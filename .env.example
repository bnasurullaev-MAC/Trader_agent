# ===========================================
# RAG SYSTEM CONFIGURATION
# ===========================================

# Qdrant Vector Database Settings
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION=kb_vectors

# Embedding Model Settings
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
BATCH_SIZE=64

# Knowledge Base Settings
KB_ROOT=./KB
MAX_CHUNK_WORDS=1000
CHUNK_OVERLAP_WORDS=200

# Query Settings
TOP_K=5

# Google Gemini AI Settings
GEMINI_KEY=your-gemini-api-key-here
GEMINI_NAME=gemini-1.5-flash
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=2048

# ===========================================
# TRADESTATION API CONFIGURATION
# ===========================================

# Get these from https://developers.tradestation.com/
TRADESTATION_CLIENT_ID=your-client-id-here
TRADESTATION_CLIENT_SECRET=your-client-secret-here

TRADESTATION_USE_SANDBOX=true

# Optional: Additional TradeStation configuration
# TRADESTATION_BASE_URL=https://api.tradestation.com
# TRADESTATION_SANDBOX_URL=https://sim-api.tradestation.com

# Refresh Token (if you have one - enables direct API access without OAuth flow)
TRADESTATION_CLIENT_REFRESH=your-refresh-token-here
